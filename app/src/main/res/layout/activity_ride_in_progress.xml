<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
        android:layout_width="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Ride in progress" app:layout_constraintBottom_toTopOf="@+id/loading_drive"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:id="@+id/rideProgressView"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/loading_drive" android:layout_weight="1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/rateRideView"
              android:text="Rate the ride" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="164dp" android:layout_marginBottom="368dp"
              app:layout_constraintBottom_toBottomOf="parent"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+"
            android:id="@+id/RatePlus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp" android:layout_marginBottom="320dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"
            android:id="@+id/RateMinus"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="76dp"
            android:layout_marginBottom="320dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>