<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DriverDash">

    <TextView
            android:text="Your Rides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/driverDrivesList"/>
    <ListView
            android:id="@+id/driverDrivesList"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Make New Ride: "/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Mesto Polaska"
                android:ems="10"
                android:id="@+id/Novi_Polazak"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Mesto Dolaska"
                android:ems="10"
                android:id="@+id/Novi_Dolazak"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Vreme Polaska"
                android:ems="10"
                android:id="@+id/Vreme_Polaska"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Vreme Dolaska"
                android:ems="10"
                android:id="@+id/Vreme_Dolaska"/>
        <Button
                android:text="Nova Voznja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Nova_Voznja"
                android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
