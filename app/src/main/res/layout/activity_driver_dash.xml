<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DriverDash">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="434dp"
                  android:orientation="vertical"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:id="@+id/linearLayout2" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
    >
        <TextView
                android:text="Your Rides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/driverDrivesList"/>
        <ListView
                android:id="@+id/driverDrivesList"
                android:layout_width="395dp"
                android:layout_height="420dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:id="@+id/linearLayout" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp">
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Mesto Polaska"
                android:ems="10"
                android:id="@+id/Novi_Polazak"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Mesto Dolaska"
                android:ems="10"
                android:id="@+id/Novi_Dolazak"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:id="@+id/linearLayout3" android:layout_marginTop="60dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0">
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Vreme Polaska"
                android:ems="10"
                android:id="@+id/Vreme_Polaska"/>
        <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Vreme Dolaska"
                android:ems="10"
                android:id="@+id/Vreme_Dolaska"/>
    </LinearLayout>


    <Button
            android:text="Nova Voznja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nova_Voznja"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"
    />

</android.support.constraint.ConstraintLayout>
